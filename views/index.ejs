<% include header %>



<body>

  <div class="container">

    <h3 id="description"></h3>

    <div class="customNotifications">

      <div class="alert alert-danger" id="nameFormWarning" role="alert">
        <p class="nameAlert">Please enter your name before proceeding!&nbsp;<a href="#" class="close nameAlert"
            data-hide="alert">&times;</a></p>
      </div>


      

      <div class="alert alert-danger" id="placeholderWarning" role="alert">
        <p class="nameAlert"><span>Placeholder Warning!&nbsp;</span><a href="#" class="close nameAlert"
            data-hide="alert">&times;</a></p>
      </div>

      <div class="alert alert-success" id="placeholderSuccess" role="alert">
        <p class="nameAlert"><span>Placeholder Success!&nbsp;</span><a href="#" class="close nameAlert"
            data-hide="alert">&times;</a></p>
      </div>

    </div>

    <div class="card" id="card">
      <div class="card-body">
        <h1 class="card-title"><b>REGISTRATION</b></h1><br>
        <form id="nameForm" role="form">
          <div class="form-group">
            <br>
            <br>

            <input type="text" id="firstName" name="nameValue" placeholder="Name" class="form-control"><br>

            <input type="text" id="RegName" reg="RegValue" placeholder="Registration Number" class="form-control"><br>
            <select class="form-control" id="titlesDropdown">
              <% for(var i=0; i<titles.length; i++) {%>
              <option><%= titles[i] %></option>
              <% } %>
            </select>

            <br>
            <br>

            <input class="btn btn-primary btn-start" class="form-control" type="submit" id="start_quiz"
              value="Start Quiz">

          </div>
        </form>
      </div>
    </div>



    <div class="card" id="card2">
      <div class="card-body">
        <h2 id="welcome"></h2>
        <h3 id="ajaxloading"></h3>
        <button id="reload" class="btn btn-success btn-sm">Reload</button>
        <a href="" id="backHome" class="btn btn-primary btn-sm">Back To Home</a>

        <div class="customNotifications">
          <div class="alert alert-danger" id="answerWarning" role="alert">
            <p class="nameAlert">Please choose an answer before proceeding!&nbsp;<a href="#" class="close nameAlert"
                data-hide="alert">&times;</a></p>
          </div>
        </div>

        <h3 id="questionNumber"></h3>
        <h3 id="question"></h3>

        <form id="answerChoices">
          <br>
          <input type="radio" name="answers" id="0">
          <label for="0" id="ansLabels"></label><br id="b0">
          <input type="radio" name="answers" id="1">
          <label for="1" id="ansLabels"></label><br id="b1">
          <input type="radio" name="answers" id="2">
          <label for="2" id="ansLabels"></label><br id="b2">
          <input type="radio" name="answers" id="3">
          <label for="3" id="ansLabels"></label><br id="b3">
          <input type="radio" name="answers" id="4">
          <label for="4" id="ansLabels"></label><br id="b4">
          <input type="radio" name="answers" id="5">
          <label for="5" id="ansLabels"></label><br id="b5">
          <input type="radio" name="answers" id="6">
          <label for="6" id="ansLabels"></label><br id="b6">
        </form>
        <br>

        <button id="previousQuestion" class="btn btn-danger btn-sm"><b>
            << Back</b> </button> <button id="nextQuestion" class="btn btn-success btn-sm"><B>Next >></B>
        </button>

        <h2 id="nameScore"></h2>
        <center>
          <canvas id="piechart" width="480" height="250"></canvas>
        </center>

        <table class="table table-hover" id="scoreTable">
          <thead>
            <tr>
              <th>Question</th>
              <th>Your Answer</th>
              <th>Correct Answer</th>
              <th>Global Correct</th>
            </tr>
          <tbody>
          </tbody>
          </thead>
        </table>

        <h2 id="tenScores">Top Ten Users:</h2>
        <table class="table table-hover" id="userTable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Score</th>
            </tr>
          <tbody>
          </tbody>
          </thead>
        </table>
        <center>
          <a href="" id="home" class="btn  btn-sm btn-hm"><b>Back To Home</b></a>
        </center>
        <br>


        <script src="static/js/jquery-2.1.4.min.js"></script>
        <script src="static/js/bootstrap.min.js"></script>
        <!-- <script src="static/js/quiz.js"></script> -->
        <script src="static/js/script.js"></script>

      </div>
    </div>
  </div>

</body>

</html>